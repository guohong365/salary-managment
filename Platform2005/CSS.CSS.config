<?xml version="1.0" encoding="utf-8" ?>
<configuration>
<PlatformSettings>
	<add key="AutoReloginTimes"								value="1"			description="出现MAC错误时自动重登录次数"			/>
	<add key="AutoReloginWhenMacError"						value="true"		description="出现MAC错误时自动重登录"				/>
	<add key="BroadcastServerMultiThreadHandling"			value="true"		description="广播服务器处理采用多线程"				/>
	
	<add key="ClientCommunicationRemotingHandleException"	value="true"		description="客户端显示远程处理异常"				/>
	<add key="ClientCommunicationRemotingShowException"		value="true"		description="客户端显示远程调用异常"				/>

	<add key="ClientCommunicationResendUseBreakPoint"		value="false"		description="客户端通讯是否进行断点重传"			/>
	<add key="ClientCommunicationResendTimesOutPrompt"		value="true"		description="客户端通讯重发送次数用完是否提示"		/>
	<add key="ClientCommunicationResendTimes"				value="3"			description="客户端通讯重发送次数"					/>
	<add key="ClientCommunicationResendDelayTicks"			value="1000"			description="客户端通讯重发间隔，小于等于０没间隔"	/>
	
	<add key="ClientCommunicationTimeout"					value="60"			description="客户端通讯超时-秒"						/>
	<add key="ServerCommunicationTimeout"					value="60"			description="服务器通讯超时 秒 小于 1 无限制等待"	/>

  <add key="CommunicationBufferLength"					value="1048576"	description="TCP通讯缓冲大小,小于等于 0 不控制"							/>
  <add key="CommunicationUdpBufferLength"					value="102400"	description="UDP通讯缓冲大小,小于等于 0 不控制"							/>


  <add key="SocketTcpCheckUseThread"						value="true"		description="检查客户端连接采用多线程"				/>
	<add key="SocketTcpCheckTimeout"						value="1"			description="检查客户端连接超时"					/>
	<add key="SocketTcpCheckValue"							value="183"			description="检查客户端连接使用的数据"				/>

	<add key="SocketTcpUseAPI"								value="false"		description="SOCKET使用API"							/>

	<!-- 出现IP冲突以Refuse为主 -->
	<add key="CommunicationRefuseList"						value=""			description="拒绝客户端列表后面加;"					/>
	<add key="CommunicationBroadcastRefuseList"				value=""			description="拒绝客户端列表后面加;"					/>
	<add key="CommunicationRefuseEnable"					value="true"		description="采用接受列表"							/>
	<add key="CommunicationBroadcastRefuseEnable"			value="false"		description="采用接受列表"							/>
	
	<add key="CommunicationAcceptList"						value=""			description="接受客户端列表后面加;"					/>
	<add key="CommunicationBroadcastAcceptList"				value=""			description="接受客户端列表后面加;"					/>
	<add key="CommunicationAcceptEnable"					value="false"		description="采用拒绝列表"							/>
	<add key="CommunicationBroadcastAcceptEnable"			value="true"		description="采用拒绝列表"							/>


	<add key="CommunicationClientBroadcastLocalIPEnable"	value="false"		description="是否允许发送到本机"					/>
	<add key="CommunicationServerBroadcastLocalIPEnable"	value="false"		description="是否允许接收本机信息"					/>


	<add key="CommunicationServerCommonCacheThreadPriority"	value="Highest"		description="交易结果缓存线程优先级"				/>
	<add key="CommunicationBroadcastServerThreadPriority"	value="Highest"		description="广播服务器线程优先级"					/>
	
	<add key="SecurityLevel"								value="Mac"			description="通讯加密级别" />

	<add key="WriteSecurityLog"								value="false"		description="记录通讯校验异常" />
	<add key="WriteSecurityConsoleLog"						value="true"		description="在控制台记录通讯校验异常" />

  <add key="CommunicationTcpMaxBufferLimited"								value="10485760"		description="TCP通讯最大缓冲限制,负数不限制" />
  <add key="CommunicationUdpMaxBufferLimited"								value="1048576"		description="UDP通讯最大缓冲限制,负数不限制" />
</PlatformSettings>

</configuration>
